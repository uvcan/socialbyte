<h1>
    Socia Byte  |  <%=title%>
</h1>


<section id="feed-post">
    <h4>Post</h4>
    <%if(locals.user){%>
        <form action="/posts/create" method="post">
                <textarea name="content" id="" cols="20" rows="3" placeholder="Type hear..." required></textarea>
                <input type="submit" value="Post">
        </form>
    <%}%>

    <div id="">
        <ul>
            
            <%for(post of posts){%>
                <p>
                    <li>
                        <%if(locals.user && locals.user.id == post.user.id){%>
                            <small>
                                <a href="/posts/destroy/<%=post.id%>">X</a>
                            </small>
                        <%}%>
                    
                        <%=post.content%>
                        <br>
                       <small>
                           <%=post.user.name%>
                       </small>
                    </li>
                     
                </p>
                <div>
                    <%if(locals.user){%>
                        <form action="/comments/create" method="post">
                        <input type="text" name="content" placeholder="Type hear to add comment.." required>
                        <input type="hidden" name="post" value="<%=post._id%>">
                        <input type="submit" value="Comment">
                        </form>
                    <%}%>    
                </div>
                    <ul>
                        <%for(comment of post.comments){%> 
                            <li>
                                <p>
                                    <% if(locals.user && locals.user.id == comment.user.id ){%>
                                        <small>
                                            <a href="/comments/destroy/<%=comment.id %>">X</a>
                                        </small>
                                    <% } %>
                                    <%=comment.content %>
                                    <br>
                                    <small>
                                        <%=comment.user.name%>
                                    </small>
                                </p>
                            </li>   
                        <%}%>
                    </ul>
            <%}%>
        </ul>
       
    </div>

</section>



