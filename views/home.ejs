<h1>
    Socia Byte  |  <%=title%>
</h1>


<section id="feed-post">
    <h4>Post</h4>
    <%if(locals.user){%>
        <form action="/posts/create" method="post">
                <textarea name="content" id="" cols="20" rows="3" placeholder="Type hear..."></textarea>
                <input type="submit" value="Post">
        </form>
    <%}%>

    <div id="">
        <ul>
            <%for(post of posts){%>
                <p>
                    <li>
                        <%=post.content%>
                    </li>
                   <small>
                       <%=post.user.name%>
                   </small> 
                </p>
                
            <%}%>
        </ul>
    </div>

</section>



