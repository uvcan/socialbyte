<link rel="stylesheet" href="/css/home.css">
<div id="home-container">
    <section id="feed-post">
        <h4>Post</h4>
        <%if(locals.user){%>
            <form action="/posts/create" method="post">
                    <textarea name="content" id="" cols="20" rows="3" placeholder="Type hear..." required></textarea>
                    <input type="submit" value="Post">
            </form>
        <%}%>
    
        <div id="">
            <ul>
                <%for(post of posts){%>
                    <%-include('_post') -%>
                <%}%>   
            </ul>
        </div>
    
    </section>
    
    
    <section id="users-friends">
        <h4>User Friends</h4>
        <%for(u of all_users){%>
            <p>
                <a href="/users/profile/<%=u.id%>"><%=u.name%></a>
            </p>
        <%}%>
    </section>
</div>





